# Common
export PATH=$PATH:$HOME/bin

export TERM="xterm-color"
export EDITOR="vim"
export PAGER="less"

export LANG=en_IE.UTF-8
export LC_CTYPE=en_IE.UTF-8
export LC_MESSAGES=C

source "~/.bash_alias"

# For mercurial usage
export HGUSER="Conall O'Brien <conall@$(hostname -s)>"

# Let's make /tmp/conall

if [ -d /tmp/conall ]
then
   /usr//bin/true
else
   mkdir /tmp/conall
fi

# Enable OSX env settings
if [ "$(uname -s)" == "Darwin" ];
  source .bashenv.osx
fi

# Enable FreeBSD env settings
if [ "$(uname -s)" == "FreeBSD" ];
  source .bashenv.freebsd
fi

# Enable host specific env settings
if [ -e "~/.bashenv.$(hostname -s)" ];
  source ".bashenv.$(hostname -s)"
fi
