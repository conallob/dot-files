# vim: filetype=sh

export PS1="[0;33m\u@\h:\W$[0m "

export MAIL="~/Maildir/"

# Python custom libs
export PYTHONPATH=$PYTHONPATH:$HOME/lib/python/

#
# ssh-agent+screen magic
#
# Create a prefictable path to the socket created by remote ssh-agent
#
if [ $WINDOW ]
then
	# Inside screen, just look at the symlink
	export SSH_AUTH_SOCK=~/.ssh/agent-forwarded
else
	# Outside of screen, just symlink to the socket to the agent
	ln -sf $SSH_AUTH_SOCK ~/.ssh/agent-forwarded
fi

